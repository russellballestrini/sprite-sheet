{
  "name": "@your-org/sprite-sheet",
  "version": "2.0.0",
  "description": "A modern, embeddable HTML5 sprite sheet animation library for games and interactive applications",
  "main": "dist/sprite-sheet.js",
  "module": "src/SpriteSheet.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/SpriteSheet.js",
      "require": "./dist/sprite-sheet.cjs"
    }
