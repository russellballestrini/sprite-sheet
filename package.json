  "keywords": [
    "sprite",
    "spritesheet",
    "sprite-sheet",
    "animation",
    "canvas",
    "html5",
    "game",
    "2d",
    "graphics"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/russellballestrini/sprite-sheet"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.9.0"
  },
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ]
}
